{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "types": ["node"],
        "declaration": true,
        "declarationDir": "types",
        "declarationMap": true
    },
    "include": ["src", "dist"],
    "exclude": ["node_modules", "dist", "test"]
}
